{
  "template": "session_resume",
  "description": "Instructions returned when resuming an existing session",
  "structure": {
    "session_status": "Resumed",
    "time_since_last_activity": "Human-readable time since last activity",
    "next_actions": []
  },
  "conditional_next_actions": {
