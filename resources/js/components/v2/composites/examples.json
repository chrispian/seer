{
  "dialog": {
    "simple": {
      "id": "dialog-1",
      "type": "dialog",
      "props": {
        "title": "Confirm Action",
        "description": "Are you sure you want to proceed with this action?",
        "size": "md",
        "trigger": {
          "id": "dialog-trigger-1",
          "type": "button",
          "props": {
            "label": "Open Dialog",
            "variant": "default"
          }
        },
        "content": [
          {
            "id": "dialog-content-1",
            "type": "typography.p",
            "props": {
              "text": "This action cannot be undone. Please confirm that you want to continue."
            }
          }
        ],
        "footer": [
          {
            "id": "dialog-cancel",
            "type": "button",
            "props": {
              "label": "Cancel",
              "variant": "outline"
            }
          },
          {
            "id": "dialog-confirm",
            "type": "button",
            "props": {
              "label": "Confirm",
              "variant": "default"
            }
          }
        ]
      }
    },
    "with_form": {
      "id": "dialog-2",
      "type": "dialog",
      "props": {
        "title": "Create New Item",
        "description": "Fill in the details to create a new item",
        "size": "lg",
        "trigger": {
          "id": "dialog-trigger-2",
          "type": "button",
          "props": {
            "label": "Create Item",
            "variant": "default"
          }
        },
        "content": [
          {
            "id": "form-field-1",
            "type": "field",
            "props": {
              "label": "Item Name",
              "required": true
            },
            "children": [
              {
                "id": "input-1",
                "type": "input.text",
                "props": {
                  "placeholder": "Enter item name"
                }
              }
            ]
          },
          {
            "id": "form-field-2",
            "type": "field",
            "props": {
              "label": "Description"
            },
            "children": [
              {
                "id": "textarea-1",
                "type": "textarea",
                "props": {
                  "placeholder": "Enter description",
                  "rows": 4
                }
              }
            ]
          }
        ],
        "footer": [
          {
            "id": "dialog-cancel-2",
            "type": "button",
            "props": {
              "label": "Cancel",
              "variant": "outline"
            }
          },
          {
            "id": "dialog-submit",
            "type": "button",
            "props": {
              "label": "Create",
              "variant": "default"
            },
            "actions": {
              "click": {
                "type": "command",
                "command": "item:create"
              }
            }
          }
        ]
      }
    }
  },
  "popover": {
    "simple": {
      "id": "popover-1",
      "type": "popover",
      "props": {
        "side": "bottom",
        "align": "start",
        "trigger": {
          "id": "popover-trigger-1",
          "type": "button",
          "props": {
            "label": "Show Info",
            "variant": "outline"
          }
        },
        "content": [
          {
            "id": "popover-content-1",
            "type": "typography.p",
            "props": {
              "text": "This is additional information displayed in a popover."
            }
          }
        ]
      }
    },
    "with_actions": {
      "id": "popover-2",
      "type": "popover",
      "props": {
        "side": "right",
        "trigger": {
          "id": "popover-trigger-2",
          "type": "button.icon",
          "props": {
            "icon": "⚙",
            "variant": "ghost",
            "size": "sm"
          }
        },
        "content": [
          {
            "id": "popover-title",
            "type": "typography.h4",
            "props": {
              "text": "Quick Actions"
            }
          },
          {
            "id": "popover-separator",
            "type": "separator",
            "props": {}
          },
          {
            "id": "popover-action-1",
            "type": "button",
            "props": {
              "label": "Edit",
              "variant": "ghost",
              "className": "w-full justify-start"
            }
          },
          {
            "id": "popover-action-2",
            "type": "button",
            "props": {
              "label": "Delete",
              "variant": "ghost",
              "className": "w-full justify-start text-destructive"
            }
          }
        ]
      }
    }
  },
  "tooltip": {
    "simple": {
      "id": "tooltip-1",
      "type": "tooltip",
      "props": {
        "content": "This is a helpful tooltip",
        "side": "top"
      },
      "children": [
        {
          "id": "tooltip-child-1",
          "type": "button.icon",
          "props": {
            "icon": "ℹ",
            "variant": "ghost",
            "size": "sm"
          }
        }
      ]
    },
    "with_delay": {
      "id": "tooltip-2",
      "type": "tooltip",
      "props": {
        "content": "Save your changes",
        "side": "bottom",
        "delay": 500
      },
      "children": [
        {
          "id": "tooltip-child-2",
          "type": "button",
          "props": {
            "label": "Save",
            "variant": "default"
          }
        }
      ]
    }
  },
  "sheet": {
    "right": {
      "id": "sheet-1",
      "type": "sheet",
      "props": {
        "title": "Settings",
        "description": "Manage your application settings",
        "side": "right",
        "trigger": {
          "id": "sheet-trigger-1",
          "type": "button",
          "props": {
            "label": "Open Settings",
            "variant": "outline"
          }
        },
        "content": [
          {
            "id": "sheet-section-1",
            "type": "field",
            "props": {
              "label": "Notifications"
            },
            "children": [
              {
                "id": "sheet-switch-1",
                "type": "switch",
                "props": {
                  "label": "Enable email notifications"
                }
              }
            ]
          },
          {
            "id": "sheet-section-2",
            "type": "field",
            "props": {
              "label": "Theme"
            },
            "children": [
              {
                "id": "sheet-select-1",
                "type": "select",
                "props": {
                  "options": [
                    { "label": "Light", "value": "light" },
                    { "label": "Dark", "value": "dark" },
                    { "label": "System", "value": "system" }
                  ],
                  "defaultValue": "system"
                }
              }
            ]
          }
        ],
        "footer": [
          {
            "id": "sheet-save",
            "type": "button",
            "props": {
              "label": "Save Changes",
              "variant": "default"
            }
          }
        ]
      }
    },
    "left": {
      "id": "sheet-2",
      "type": "sheet",
      "props": {
        "title": "Navigation",
        "side": "left",
        "trigger": {
          "id": "sheet-trigger-2",
          "type": "button.icon",
          "props": {
            "icon": "☰",
            "variant": "ghost"
          }
        },
        "content": [
          {
            "id": "nav-item-1",
            "type": "button",
            "props": {
              "label": "Dashboard",
              "variant": "ghost",
              "className": "w-full justify-start"
            }
          },
          {
            "id": "nav-item-2",
            "type": "button",
            "props": {
              "label": "Projects",
              "variant": "ghost",
              "className": "w-full justify-start"
            }
          },
          {
            "id": "nav-item-3",
            "type": "button",
            "props": {
              "label": "Settings",
              "variant": "ghost",
              "className": "w-full justify-start"
            }
          }
        ]
      }
    }
  },
  "drawer": {
    "bottom": {
      "id": "drawer-1",
      "type": "drawer",
      "props": {
        "title": "Filter Options",
        "description": "Customize your search filters",
        "direction": "bottom",
        "trigger": {
          "id": "drawer-trigger-1",
          "type": "button",
          "props": {
            "label": "Show Filters",
            "variant": "outline"
          }
        },
        "content": [
          {
            "id": "filter-1",
            "type": "field",
            "props": {
              "label": "Category"
            },
            "children": [
              {
                "id": "category-select",
                "type": "select",
                "props": {
                  "options": [
                    { "label": "All", "value": "all" },
                    { "label": "Active", "value": "active" },
                    { "label": "Archived", "value": "archived" }
                  ],
                  "defaultValue": "all"
                }
              }
            ]
          },
          {
            "id": "filter-2",
            "type": "field",
            "props": {
              "label": "Date Range"
            },
            "children": [
              {
                "id": "date-range-input",
                "type": "input.text",
                "props": {
                  "placeholder": "Select date range"
                }
              }
            ]
          }
        ],
        "footer": [
          {
            "id": "drawer-clear",
            "type": "button",
            "props": {
              "label": "Clear Filters",
              "variant": "outline"
            }
          },
          {
            "id": "drawer-apply",
            "type": "button",
            "props": {
              "label": "Apply Filters",
              "variant": "default"
            }
          }
        ]
      }
    }
  }
}
