                                            "name": "designation",
                                            "label": "Designation",
                                            "type": "text",
                                            "required": true,
                                            "placeholder": "e.g., research-assistant"
                                        },
                                        {
                                            "name": "status",
                                            "label": "Status",
                                            "type": "select",
                                            "required": true,
                                            "options": [
                                                {
                                                    "value": "active",
                                                    "label": "Active"
                                                },
                                                {
                                                    "value": "inactive",
                                                    "label": "Inactive"
                                                }
                                            ]
                                        }
                                    ],
                                    "submitUrl": "/api/v2/ui/datasources/Agent",
                                    "submitMethod": "POST",
