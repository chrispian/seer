{
  "name": "export.generate",
  "version": "1.0.0",
  "scope": "export.generate",
  "input_schema": {
    "type": "object",
    "properties": {
      "template": {
        "type": "string",
        "description": "template name or path"
      },
      "entity": {
        "type": "string"
      },
      "query": {
        "type": "object"
      },
      "format": {
        "type": "string",
        "enum": [
          "md",
          "txt",
          "json",
          "csv",
          "xlsx",
          "pdf"
        ]
      },
      "output_name": {
        "type": "string"
      },
      "reproducible": {
        "type": "boolean",
        "default": true
      }
    },
    "required": [
      "entity",
      "format",
      "output_name"
    ]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "artifact_id": {
        "type": "string"
      },
      "path": {
        "type": "string"
      },
      "mime": {
        "type": "string"
      },
      "sha256": {
        "type": "string"
      }
    }
  }
}
