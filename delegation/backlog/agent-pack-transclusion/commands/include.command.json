{
  "id": "include",
  "slash": "/include",
  "aliases": [
    "inc"
  ],
  "modes": [
    "ref",
    "copy"
  ],
  "layouts": [
    "checklist",
    "table",
    "cards"
  ],
  "args": [
    {
      "name": "uid",
      "type": "string",
      "desc": "fe:TYPE/ID, for single include"
    },
    {
      "name": "search",
      "type": "string",
      "desc": "free-text search to pick a target"
    },
    {
      "name": "query",
      "type": "string",
      "desc": "fragments mini-query for list transclusion"
    },
    {
      "name": "mode",
      "type": "enum",
      "values": [
        "ref",
        "copy"
      ],
      "default": "ref"
    },
    {
      "name": "layout",
      "type": "enum",
      "values": [
        "checklist",
        "table",
        "cards"
      ],
      "default": "checklist"
    },
    {
      "name": "context.ws",
      "type": "string",
      "desc": "workspace override"
    },
    {
      "name": "context.proj",
      "type": "string",
      "desc": "project override"
    }
  ],
  "examples": [
    "/include uid:fe:note/7Q2M9K",
    "/include \"laravel queue\" type:bookmark mode:ref",
    "/include query:\"type:todo where:done=false sort:due\" layout:checklist @proj:Fragments",
    "/include uid:fe:todo/AB12 mode:copy"
  ]
}