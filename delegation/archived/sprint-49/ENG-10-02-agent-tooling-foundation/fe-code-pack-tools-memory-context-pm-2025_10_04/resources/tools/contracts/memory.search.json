{
  "name": "memory.search",
  "scope": "memory.read",
  "input_schema": {
    "type": "object",
    "properties": {
      "q": {
        "type": "string"
      },
      "kinds": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "scope": {
        "type": "string",
        "enum": [
          "task",
          "project",
          "global",
          "any"
        ],
        "default": "any"
      },
      "limit": {
        "type": "integer",
        "default": 20
      }
    }
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "items": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    }
  }
}
