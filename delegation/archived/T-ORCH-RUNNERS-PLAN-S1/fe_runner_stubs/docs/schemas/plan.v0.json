{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PlanSpec v0",
  "type": "object",
  "required": [
    "schema_version",
    "task_id",
    "run_id",
    "steps"
  ],
  "properties": {
    "schema_version": {
      "const": "v0"
    },
    "task_id": {
      "type": "string"
    },
    "run_id": {
      "type": "string"
    },
    "budgets": {
      "type": "object",
      "properties": {
        "tokens": {
          "type": "integer",
          "minimum": 0
        },
        "tool_calls": {
          "type": "integer",
          "minimum": 0
        },
        "wall_seconds": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "kind"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          },
          "view_signatures": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "substeps": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "budget": {
            "type": "object"
          }
        }
      }
    }
  }
}
