{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EventEnvelope v0",
  "type": "object",
  "required": [
    "schema_version",
    "task_id",
    "run_id",
    "timestamp",
    "type",
    "span_id"
  ],
  "properties": {
    "schema_version": {
      "const": "v0"
    },
    "task_id": {
      "type": "string"
    },
    "run_id": {
      "type": "string"
    },
    "step_id": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "span_id": {
      "type": "string"
    },
    "parent_span_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "agent_id": {
      "type": "string"
    },
    "data": {
      "type": "object"
    }
  }
}
