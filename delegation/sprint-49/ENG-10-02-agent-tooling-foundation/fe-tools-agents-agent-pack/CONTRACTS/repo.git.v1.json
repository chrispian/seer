{
  "name": "repo.git",
  "version": "1.0.0",
  "scope": "repo.git",
  "input_schema": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": [
          "status",
          "branch",
          "create-branch",
          "commit",
          "diff",
          "apply-patch",
          "open-pr"
        ]
      },
      "args": {
        "type": "object"
      }
    },
    "required": [
      "action"
    ]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "result": {
        "type": "string"
      },
      "diff": {
        "type": "string"
      }
    }
  }
}
